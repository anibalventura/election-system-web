<main>
  <div class="row justify-content-center mb-4">
        <div class="col-5">
        <div class="card shadow-sm">
        <div class="card-header {{#if editMode}}bg-warning{{else}}bg-success{{/if}} text-light">
          <h4>{{#if editMode}}Edit Position{{else}}Create a Position{{/if}}</h4>
        </div>
        <div class="card-body">
          <form method="post" action="{{#if editMode}}/positions/edit{{else}}/positions/create{{/if}}">

            {{#if editMode}}
                <input type="hidden" name="positionId" value="{{position.id}}">
            {{/if}}

            <div class="form-group row mb-3">
                <div class="col">
                    <label for="name" class="form-label"><strong
                        >Name:</strong></label>
                    <input
                        required
                        type="text"
                        id="name"
                        name="name"
                        placeholder="Enter a name..."
                        class="form-control shadow-sm"
                        value="{{#if editMode}}{{position.name}}{{/if}}"
                    />
                </div>
            </div>

            <div class="form-group row mb-3">
                <div class="col">
                    <label for="description" class="form-label"><strong
                        >Description:</strong></label>
                    <textarea
                        required
                        id="description"
                        name="description"
                        placeholder="Enter a description..."
                        rows="5"
                        class="form-control shadow-sm"
                    >{{#if editMode}}{{position.description}}{{/if}}</textarea>
                </div>
            </div>

            {{#if editMode}}
              <div class="form-group row mb-3">
                <div class="col">
                  <input
                    {{#if position.status}}checked{{else}}{{/if}}
                    class="form-check-input"
                    type="checkbox"
                    value="{{position.status}}"
                    id="status"
                    name="status"
                  >
                  <label class="form-check-label" for="status">
                    <strong>Active</strong>
                  </label>
                </div>
              </div>
            {{/if}}

            <div class="container-fluid text-center mt-4">
                <button
                type="submit"
                class="btn btn-primary shadow-sm"
                >Save</button>
                <a href="/positions" class="btn btn-secondary shadow-sm">Cancel</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</main>