<main>
  <div class="row justify-content-center mb-4">
    <div class="col-11">
      <div class="card shadow-sm">
        <div class="card-header bg-primary bg-opacity-75">
          <h3 class="text-white">
            Positions Maintenance
            <a
              class="btn btn-success shadow-sm"
              href="/positions/create"
            >Create</a>
          </h3>

        </div>
        {{#if hasPositions}}
          <div class="card-body">
            <table class="table table-striped table-hover">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">ID</th>
                  <th scope="col">Name</th>
                  <th scope="col">Description</th>
                  <th scope="col">Status</th>
                  <th scope="col">Actions</th>
                </tr>
              </thead>
              <tbody>
                {{#each positions as |position|}}
                  <tr>
                    <th scope="row">{{position.id}}</th>
                    <td>{{position.name}}</td>
                    <td>{{position.description}}</td>
                    <td>{{#if
                        position.status
                      }}Active{{else}}Inactive{{/if}}</td>
                    <td>
                      <div class="btn-group mx-0">
                        <a
                          href="/positions/edit/{{position.id}}"
                          class="btn btn-sm btn-outline-warning"
                        >Edit</a>
                        <a
                          href="/positions/delete/{{position.id}}"
                          class="btn btn-sm btn-outline-danger"
                        >Delete</a>
                      </div>
                    </td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        {{else}}
          <div class="container-fluid text-center m-5">
            <h4>No Positions created!</h4>
            <p>Start creating one.</p>
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</main>