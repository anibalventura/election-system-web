<main>
  <div class="row justify-content-center mb-4">
    <div class="col-11">
      <div class="card shadow-sm">
        <div class="card-header bg-primary bg-opacity-75">
          <div class="row">
            <h3 class="col text-white">
              Candidates Maintenance
            </h3>
            <div class="col d-flex justify-content-end">
              <a
                class="btn btn-success shadow-sm {{#if activeElection}}disabled{{/if}}"
                href="/candidates/create"
              >Create</a>
            </div>
          </div>
        </div>
        {{#if hasCandidates}}
          <div class="card-body">
            <div class="row">

              {{#each candidates as |candidate|}}
                <div class="col-3 mb-3">
                  <div class="card shadow-sm h-100">
                    <div class="text-center mt-3">
                      <img
                        src="{{candidate.profilePicture}}"
                        alt="{{candidate.name}}"
                        class="img-thumbnail img-fluid h-100"
                        width="200px"
                      />
                    </div>
                    <div class="card-body">
                      <h4>{{candidate.name}} {{candidate.lastName}}</h4>
                      <div>
                        <div>
                          <label class="card-subtitle text-muted">Party:</label>
                          <span
                            class=""
                          >{{candidate.party.dataValues.name}}</span>
                        </div>
                        <div>
                          <label class="card-subtitle text-muted">Position to
                            aspire:</label>
                          <span
                            class=""
                          >{{candidate.position.dataValues.name}}</span>
                        </div>
                        <div>
                          <label
                            class="card-subtitle text-muted"
                          >Status:</label>
                          <span class="">{{#if
                              candidate.status
                            }}Active{{else}}Inactive{{/if}}</span>
                        </div>
                        <div
                          class="mt-3 d-flex justify-content-between align-items-center"
                        >
                          <div class="btn-group">
                            <a
                              href="/candidates/edit/{{candidate.id}}"
                              class="btn btn-sm btn-outline-warning"
                            >Edit</a>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              {{/each}}
            </div>
          </div>
        {{else}}
          <div class="container-fluid text-center m-5">
            <h4>No Candidates created!</h4>
            <p>Start creating one.</p>
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</main>