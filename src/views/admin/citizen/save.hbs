<main>
  <div class="row justify-content-center mb-4">
        <div class="col-5">
        <div class="card shadow-sm">
        <div class="card-header {{#if editMode}}bg-warning{{else}}bg-success{{/if}} text-light">
          <h4>{{#if editMode}}Edit Citizen{{else}}Create a Citizen{{/if}}</h4>
        </div>
        <div class="card-body">
          <form method="post" action="/citizens/{{#if editMode}}edit{{else}}create{{/if}}">

            {{#if editMode}}
                <input type="hidden" name="citizenId" value="{{citizen.id}}">
            {{/if}}

            <div class="form-group row mb-3">
                <div class="col">
                    <label for="name" class="form-label"><strong
                        >Name:</strong></label>
                    <input
                        required
                        type="text"
                        id="name"
                        name="name"
                        placeholder="Enter a name..."
                        class="form-control shadow-sm"
                        value="{{#if editMode}}{{citizen.name}}{{/if}}"
                    />
                </div>
                <div class="col">
                    <label for="lastName" class="form-label"><strong
                        >Las name:</strong></label>
                    <input
                        required
                        type="text"
                        id="lastName"
                        name="lastName"
                        placeholder="Enter a last name..."
                        class="form-control shadow-sm"
                        value="{{#if editMode}}{{citizen.lastName}}{{/if}}"
                    />
                </div>
            </div>

            <div class="form-group row mb-3">
                <div class="col">
                    <label for="identificationDocument" class="form-label"><strong
                        >Identification document:</strong></label>
                    <input
                        required
                        type="text"
                        id="identificationDocument"
                        name="identificationDocument"
                        placeholder="Enter an identification document..."
                        class="form-control shadow-sm"
                        value="{{#if editMode}}{{citizen.identificationDocument}}{{/if}}"
                    />
                </div>
                <div class="col">
                    <label for="email" class="form-label"><strong
                        >Email:</strong></label>
                    <input
                        required
                        type="email"
                        id="email"
                        name="email"
                        placeholder="Enter a last name..."
                        class="form-control shadow-sm"
                        value="{{#if editMode}}{{citizen.email}}{{/if}}"
                    />
                </div>
            </div>

            {{#if editMode}}
              <div class="form-group row mb-3">
                <div class="col">
                  <input
                    {{#if citizen.status}}checked{{else}}{{/if}}
                    class="form-check-input"
                    type="checkbox"
                    value="{{citizen.status}}"
                    id="status"
                    name="status"
                  >
                  <label class="form-check-label" for="status">
                    <strong>Active</strong>
                  </label>
                </div>
              </div>
            {{/if}}

            <div class="container-fluid text-center mt-4">
                <button
                type="submit"
                class="btn btn-primary shadow-sm"
                >Save</button>
                <a href="/citizens" class="btn btn-secondary shadow-sm">Cancel</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</main>