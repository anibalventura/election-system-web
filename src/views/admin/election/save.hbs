<main>
  <div class="row justify-content-center mb-4">
        <div class="col-5">
        <div class="card shadow-sm">
        <div class="card-header {{#if editMode}}bg-warning{{else}}bg-success{{/if}} text-light">
          <h4>{{#if editMode}}Edit Election{{else}}Create a Election{{/if}}</h4>
        </div>
        <div class="card-body">
          <form method="post" action="/admin/elections/{{#if editMode}}edit{{else}}create{{/if}}">

            {{#if editMode}}
                <input type="hidden" name="electionId" value="{{election.id}}">
            {{/if}}

            <div class="form-group row mb-3">
                <div class="col">
                    <label for="name" class="form-label"><strong
                        >Name:</strong></label>
                    <input
                        required
                        type="text"
                        id="name"
                        name="name"
                        placeholder="Enter a name..."
                        class="form-control shadow-sm"
                        value="{{#if editMode}}{{election.name}}{{/if}}"
                    />
                </div>
            </div>

            <div class="form-group row mb-3">
                <div class="col-4">
                    <label for="date" class="form-label"><strong
                        >Date:</strong></label>
                    <input
                        required
                        type="date"
                        id="date"
                        name="date"
                        class="form-control shadow-sm"
                        value="{{#if editMode}}{{election.date}}{{/if}}"
                    />
                </div>
            </div>

            <div class="container-fluid text-center mt-4">
                <button
                type="submit"
                class="btn btn-primary shadow-sm"
                >Save</button>
                <a href="/admin/elections" class="btn btn-secondary shadow-sm">Cancel</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</main>